{
  "scriptFile": "__init__.py",
  "bindings": [
    {
      "authLevel": "Anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get",
        "post"
      ],
      "route":"GetRating/{ratingId}"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    },
    {
      "name": "documents",
      "type": "cosmosDB",
      "databaseName": "ratings",
      "collectionName": "ratings",
      "sqlQuery": "SELECT * from c where c.id = {ratingId}",
      "connectionStringSetting": "cosmosratings",
      "direction": "in"
  }
  ]
}